# calculate regional average
inc_avg <-
    avail_plt_hd_df %>%
    # mutate(income_level = ifelse(iso3c == "VEN", "Upper middle income", income_level)) %>%
    filter(!is.na(income_level) & income_level != "Not classified") %>%
