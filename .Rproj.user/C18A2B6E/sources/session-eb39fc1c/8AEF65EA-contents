    summarise(avg = mean(availability, na.rm = T)) %>%
    arrange(-avg) %>%
    ungroup()

avail_plt_hd_df <- avail_plt_hd_df %>%
    mutate(income_level = factor(income_level, levels = c(
        "High income", "Upper middle income",
        "Lower middle income", "Low income"
