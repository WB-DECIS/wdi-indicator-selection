# set directories
# dir <- here()
dir <- "C:/Users/wb599047/Downloads/Measurement_Capabilities/Measurement_Capabilities/"

# set directories
raw_dir <- paste0(dir, "01_raw_data/")
output_dir <- paste0(dir, "03_output/")

